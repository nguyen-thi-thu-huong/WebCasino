@model UserLogginViewModel
@{
    ViewData["Title"] = "LoggedIn";
}

<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @Model.Alias!</a>
        </li>
        <li>
            <a asp-area="" asp-controller="Wallet" asp-action="Index">Balance: @Model.Balance @Model.Currency</a>
        </li>
        <li>
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
        </li>
    </ul>
</form>

